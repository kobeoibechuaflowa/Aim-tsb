--== Dá»‹ch vá»¥ Roblox ==--
local Players = game:GetService("Players")
local UIS = game:GetService("UserInputService")
local TweenService = game:GetService("TweenService")
local RunService = game:GetService("RunService")

local LocalPlayer = Players.LocalPlayer
local Camera = workspace.CurrentCamera

--== Biáº¿n Aimlock ==--
local AimlockEnabled = false
local AimKey = Enum.KeyCode.E
local Target = nil

--== HÃ m kiá»ƒm tra má»¥c tiÃªu trÆ°á»›c máº·t ==--
local function IsInFront(targetPart)
    local direction = (targetPart.Position - Camera.CFrame.Position).Unit
    local dot = direction:Dot(Camera.CFrame.LookVector)
    return dot > 0.5
end

--== HÃ m láº¥y má»¥c tiÃªu gáº§n nháº¥t trÆ°á»›c máº·t ==--
local function GetClosestTarget()
    local closest = nil
    local shortestDist = math.huge
    for _, player in pairs(Players:GetPlayers()) do
        if player ~= LocalPlayer and player.Character and player.Character:FindFirstChild("HumanoidRootPart") then
            local HRP = player.Character.HumanoidRootPart
            if IsInFront(HRP) then
                local screenPoint, onScreen = Camera:WorldToViewportPoint(HRP.Position)
                if onScreen then
                    local dist = (Vector2.new(screenPoint.X, screenPoint.Y) - UIS:GetMouseLocation()).Magnitude
                    if dist < shortestDist then
                        shortestDist = dist
                        closest = player
                    end
                end
            end
        end
    end
    return closest
end

--== HÃ m báº­t/táº¯t Aimlock ==--
local function ToggleAimlock(state)
    AimlockEnabled = state
    if AimlockEnabled then
        Target = GetClosestTarget()
    else
        Target = nil
    end
    AimButton.Text = "Aimlock: " .. (AimlockEnabled and "ON" or "OFF")
end

--== Aimlock Update ==--
RunService.RenderStepped:Connect(function()
    if AimlockEnabled and Target and Target.Character and Target.Character:FindFirstChild("HumanoidRootPart") then
        Camera.CFrame = CFrame.new(Camera.CFrame.Position, Target.Character.HumanoidRootPart.Position)
    end
end)

