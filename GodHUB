tabUnder.Size = UDim2.new(0.5, 0, 0, 30)
tabUnder.Position = UDim2.new(0.5, 0, 0, 0)
tabUnder.Text = "ü¶∂ ƒê√°nh d∆∞·ªõi ch√¢n"
tabUnder.BackgroundColor3 = Color3.fromRGB(40, 40, 70)
tabUnder.TextColor3 = Color3.fromRGB(200,200,255)
