-- === Dropdown ch·ªçn player ===
local dropdown = Instance.new("TextButton", underPanel)
dropdown.Size = UDim2.new(0.8, 0, 0, 30)
dropdown.Position = UDim2.new(0.1, 0, 0.55, 0)
dropdown.Text = "üïΩÔ∏è Ch·ªçn ng∆∞·ªùi ch∆°i"
dropdown.Font = Enum.Font.Gotham
dropdown.TextSize = 14
dropdown.BackgroundColor3 = Color3.fromRGB(60, 60, 100)
dropdown.TextColor3 = Color3.fromRGB(255,255,255)
Instance.new("UICorner", dropdown).CornerRadius = UDim.new(0, 6)

local dropFrame = Instance.new("Frame", dropdown)
dropFrame.Size = UDim2.new(1, 0, 0, 100)
dropFrame.Position = UDim2.new(0, 0, 1, 0)
dropFrame.BackgroundColor3 = Color3.fromRGB(35, 35, 55)
dropFrame.Visible = false
dropFrame.ClipsDescendants = true
Instance.new("UICorner", dropFrame).CornerRadius = UDim.new(0, 6)

local UIListLayout = Instance.new("UIListLayout", dropFrame)
UIListLayout.SortOrder = Enum.SortOrder.LayoutOrder

local function refreshPlayerList()
    dropFrame:ClearAllChildren()
    UIListLayout.Parent = dropFrame
    for _, player in ipairs(Players:GetPlayers()) do
        if player ~= LocalPlayer then
            local btn = Instance.new("TextButton", dropFrame)
            btn.Size = UDim2.new(1, 0, 0, 25)
            btn.Text = player.Name
            btn.Font = Enum.Font.Gotham
            btn.TextSize = 14
            btn.BackgroundColor3 = Color3.fromRGB(50, 50, 80)
            btn.TextColor3 = Color3.fromRGB(255,255,255)
            btn.MouseButton1Click:Connect(function()
                selectedPlayer = player
                dropdown.Text = "üïΩÔ∏è " .. player.Name
                dropFrame.Visible = false
            end)
        end
    end
end

dropdown.MouseButton1Click:Connect(function()
    dropFrame.Visible = not dropFrame.Visible
end)

local refreshBtn = Instance.new("TextButton", underPanel)
